{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "repositories": [
        {
            "type": "path",
            "url": "./packages/*"
        },
        {
            "type": "vcs",
            "url": "https://github.com/tiagofrancafernandes/laravel-easyblade.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/tiagofrancafernandes/f2-laravel-enums.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/tiagofrancafernandes/f2-politool.git"
        }
    ],
    "require": {
        "php": "^8.1",
        "abbasudo/laravel-purity": "^1.0",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^10.10",
        "laravel/sanctum": "^3.2",
        "laravel/tinker": "^2.8",
        "rezaamini-ir/laravel-easyblade": "dev-laravel-v10",
        "spatie/simple-excel": "^3.2",
        "tiagof2/f2-laravel-enums": "dev-master",
        "tiagof2/f2-politool": "dev-master"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.13",
        "doctrine/dbal": "^3.6",
        "fakerphp/faker": "^1.9.1",
        "laravel/pint": "^1.10",
        "laravel/sail": "^1.21",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^7.0",
        "phpunit/phpunit": "^10.1",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "resources/helpers/functions.php",
            "resources/files/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
